<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        Tom
      </div>
      <div class="message-date">
        2020/3/31(Wed) 12:43:40
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        おはよう
      </div>
    </div>
  </div>
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        Sim
      </div>
      <div class="message-date">
        2020/3/31(Wed) 12:43:40
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        こんにちは
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "form" }, local: true do |form| %>

  <div class="form-input">
    <%= form.text_field :content, class: 'form-message', placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= form.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= form.submit "送信", class: 'form-submit' %>

<% end %>